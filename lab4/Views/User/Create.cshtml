@model User

<h1>Add new user</h1>
<form method="post">
	<div class="form-group row">
		<label>User Id</label>
		<div class="col-sm-10">
			<input asp-for="UserName" />
			<span asp-validation-for="UserName"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Adress</label>
		<div class="col-sm-10">
			<input asp-for="Adress" />
			<span asp-validation-for="Adress"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Number</label>
		<div class="col-sm-10">
			<input asp-for="Number" />
			<span asp-validation-for="Number"></span>
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Add user</button>
	</div>
</form>