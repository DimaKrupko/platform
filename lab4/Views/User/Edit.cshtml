@model User
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>
<form method="post" asp-action="Edit">
  <div class="form-group row">
		<label>Name</label>
	  <div class="col-sm-10">
		  <input asp-for="UserName" />
			<span asp-validation-for="UserName"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>Adress</label>
		<div class="col-sm-10">
			<input asp-for="Adress" />
			<span asp-validation-for="Adress"></span>
		</div>
  </div>
  <div class="form-group row">
		<label>Number</label>
		<div class="col-sm-10">
			<input asp-for="Number" />
			<span asp-validation-for="Number"></span>
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Edit user</button>
  </div>
</form>
