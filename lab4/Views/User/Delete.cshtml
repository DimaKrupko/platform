@model User
@{
	ViewData["Title"] = "Delete";
}

<h1>Delete author</h1>

<form method="post" asp-action="DeleteP">
	<input asp-for="userId" hidden />
	<div class="form-group row">
		<label>Name</label>
		<div class="col-sm-10">
			<input asp-for="UserName" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Address</label>
		<div class="col-sm-10">
			<input asp-for="Adress" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Number</label>
		<div class="col-sm-10">
			<input asp-for="Number" disabled />
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Delete</button>
	</div>
</form>
