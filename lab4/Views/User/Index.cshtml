@model IEnumerable<lab4.Models.User>
@{
    ViewData["Title"] = "User";
}
<div class="d-flex justify-content-between align-items-center pb-2">
    <h1>User</h1>
    <a asp-controller="User" asp-action="Create" class="btn btn-success">Add user</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Adress</th>
            <th scope="col">Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.UserName</th>
                <td>@user.Adress</td>
             
                <td>
                    <a asp-controller="Person" asp-action="Edit" asp-route-id="@user.userId" class="btn btn-secondary">Edit person</a>
                </td>
                <td>
                    <a asp-controller="Person" asp-action="Delete" asp-route-id="@user.userId" class="btn btn-danger">Delete person</a>
                </td>
            </tr>
        }
    </tbody>
</table>