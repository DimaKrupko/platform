@model Tickets
@{
	ViewData["Title"] = "Delete";
}

<h1>Delete ticket</h1>
<form method="post" asp-action="DeleteP">
	<input asp-for="ticket_id" hidden />
	<div class="form-group row">
		<label>Carriage number</label>
		<div class="col-sm-10">
			<input asp-for="carriage_number" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Carriage Type</label>
		<div class="col-sm-10">
			<input asp-for="carriage_type" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Date</label>
		<div class="col-sm-10">
			<input asp-for="date_departure" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Time</label>
		<div class="col-sm-10">
			<input asp-for="time_arrival" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Destination</label>
		<div class="col-sm-10">
			<input asp-for="destination" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Distance</label>
		<div class="col-sm-10">
			<input asp-for="distance" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Cost</label>
		<div class="col-sm-10">
			<input asp-for="cost" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Surcharge Urgency</label>
		<div class="col-sm-10">
			<input asp-for="surcharge_urgency" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Surcharge Type</label>
		<div class="col-sm-10">
			<input asp-for="surcharge_type" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>User Id</label>
		<div class="col-sm-10">
			<input asp-for="userId" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Train Id</label>
		<div class="col-sm-10">
			<input asp-for="train_id" disabled />
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Delete ticket</button>
	</div>
</form>