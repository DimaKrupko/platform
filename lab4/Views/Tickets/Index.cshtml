@model IEnumerable<lab4.Models.Tickets>
@{
    ViewData["Title"] = "Tickets";
}
<div class="d-flex justify-content-between align-items-center pb-2">
    <h1 class="float-lef">Tickets</h1>
    <a asp-controller="Tickets" asp-action="Create" class="btn btn-success float-right">Add ticket</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Ticket Id</th>
            <th scope="col">Carriage number</th>
            <th scope="col">Carriage type</th>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            <th scope="col">Destination</th>
            <th scope="col">Distance</th>
            <th scope="col">Cost</th>
            <th scope="col">Surcharge Urgency</th>
            <th scope="col">Surcharge Type</th>
            <th scope="col">User Id</th>
            <th scope="col">Train Id</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <th scope="row">
                    @ticket.ticket_id
                </th>
                <th scope="row">
                    @ticket.carriage_number
                </th>
                <td>
                    @ticket.carriage_type
                </td>
                <td>
                    @ticket.date_departure
                </td>
                <td>
                    @ticket.time_arrival
                </td>
                 <td>
                    @ticket.destination
                </td>
                 <td>
                    @ticket.distance
                </td>
                 <td>
                    @ticket.cost
                </td>
                 <td>
                    @ticket.surcharge_urgency
                </td>
                 <td>
                    @ticket.surcharge_type
                </td>
                 <td>
                    @ticket.userId
                </td>
                 <td>
                    @ticket.train_id
                </td>
                <td>
                    <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@ticket.ticket_id" class="btn btn-secondary">Edit ticket</a>
                </td>
                <td>
                    <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@ticket.ticket_id" class="btn btn-danger">Delete ticket</a>
                </td>
            </tr>
        }
    </tbody>
</table>