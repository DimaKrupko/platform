@page
@model             EditModel

<h1>Edit authors</h1>
<form method="post">
	<input asp-for="user.userId" hidden />
	<div class="form-group row">
		<label>Name</label>
		<div class="col-sm-10">
			<input asp-for="user.UserName" />
			<span asp-validation-for="user.UserName"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Adress</label>
		<div class="col-sm-10">
			<input asp-for="user.Adress" />
			<span asp-validation-for="user.Adress"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Number</label>
		<div class="col-sm-10">
			<input asp-for="user.Number" />
			<span asp-validation-for="user.Number"></span>
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Edit person</button>
	</div>
</form>