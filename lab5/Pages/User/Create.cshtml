@page
@model lab5.Pages.User.Create

<h1>Add new user</h1>
<form method="post">
  <div class="form-group row">
	  <label>First Name</label>
	  <div class="col-sm-10">
		  <input asp-for="user.UserName" />
		  <span asp-validation-for="user.UserName"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>Last Name</label>
		<div class="col-sm-10">
			<input asp-for="user.Adress" />
			<span asp-validation-for="user.Adress"></span>
		</div>
  </div>
  <div class="form-group row">
		<label>Last Name</label>
		<div class="col-sm-10">
			<input asp-for="user.Number" />
			<span asp-validation-for="user.Number"></span>
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Add person</button>
  </div>
</form>