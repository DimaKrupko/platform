@page
@model lab5.Pages.Ticket.DeleteModel

<h1>Delete ticket</h1>
<form method="post" >
	<input asp-for="ticket.ticket_id" hidden />
	<div class="form-group row">
		<label>Carriage number</label>
		<div class="col-sm-10">
			<input asp-for="ticket.carriage_number" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Carriage Type</label>
		<div class="col-sm-10">
			<input asp-for="ticket.carriage_type" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Date</label>
		<div class="col-sm-10">
			<input asp-for="ticket.date_departure" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Time</label>
		<div class="col-sm-10">
			<input asp-for="ticket.time_arrival" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Destination</label>
		<div class="col-sm-10">
			<input asp-for="ticket.destination" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Distance</label>
		<div class="col-sm-10">
			<input asp-for="ticket.distance" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Cost</label>
		<div class="col-sm-10">
			<input asp-for="ticket.cost" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Surcharge Urgency</label>
		<div class="col-sm-10">
			<input asp-for="ticket.surcharge_urgency" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Surcharge Type</label>
		<div class="col-sm-10">
			<input asp-for="ticket.surcharge_type" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>User Id</label>
		<div class="col-sm-10">
			<input asp-for="ticket.userId" disabled />
		</div>
	</div>
	<div class="form-group row">
		<label>Train Id</label>
		<div class="col-sm-10">
			<input asp-for="ticket.train_id" disabled />
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Delete ticket</button>
	</div>
</form>