@page
@model lab5.Pages.Ticket.EditModel



<h1>Edit ticket</h1>
<form method="post" >
	<div class="form-group row">
		<label>Ticket id</label>
		<div class="col-sm-10">
			<input asp-for="ticket.ticket_id" />
			<span asp-validation-for="ticket.ticket_id"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Carriage number</label>
		<div class="col-sm-10">
			<input asp-for="ticket.carriage_number" />
			<span asp-validation-for="ticket.carriage_number"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Carriage type</label>
		<div class="col-sm-10">
			<input asp-for="ticket.carriage_type" />
			<span asp-validation-for="ticket.carriage_type"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Date</label>
		<div class="col-sm-10">
			<input asp-for="ticket.date_departure" />
			<span asp-validation-for="ticket.date_departure"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Time</label>
		<div class="col-sm-10">
			<input asp-for="ticket.time_arrival" />
			<span asp-validation-for="ticket.time_arrival"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Destination</label>
		<div class="col-sm-10">
			<input asp-for="ticket.destination" />
			<span asp-validation-for="ticket.destination"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Distance</label>
		<div class="col-sm-10">
			<input asp-for="ticket.distance" />
			<span asp-validation-for="ticket.distance"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Cost</label>
		<div class="col-sm-10">
			<input asp-for="ticket.cost" />
			<span asp-validation-for="ticket.cost"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Surcharge Urgency</label>
		<div class="col-sm-10">
			<input asp-for="ticket.surcharge_urgency" />
			<span asp-validation-for="ticket.surcharge_urgency"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Surcharge Type</label>
		<div class="col-sm-10">
			<input asp-for="ticket.surcharge_type" />
			<span asp-validation-for="ticket.surcharge_type"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>User Id</label>
		<div class="col-sm-10">
			<input asp-for="ticket.userId" />
			<span asp-validation-for="ticket.userId"></span>
		</div>
	</div>
	<div class="form-group row">
		<label>Train Id</label>
		<div class="col-sm-10">
			<input asp-for="ticket.train_id" />
			<span asp-validation-for="ticket.train_id"></span>
		</div>
	</div>
	<div class="col-sm-10 pt-2">
		<button type="submit">Edit ticket</button>
	</div>
</form>